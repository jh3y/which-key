$key-color = #000
.keys__backlog
  .key
    background-color lighten($key-color, 20%)
    height 100px
    width  100px

    &__code
      font-size 2rem
    &__value
      font-size 1.15rem

.key
  animation fadeIn .2s ease 0s
  background-color lighten($key-color, 10%)
  border-radius 5px
  box-shadow 2px 2px 10px $key-color
  color #fafafa
  display grid
  font-family 'Varela Round', sans-serif
  grid-template-columns 1fr
  grid-template-rows 1fr repeat(2, auto)
  height 150px
  margin 5px
  padding 10px
  width 150px

  &__code
    font-size 4rem
  &__value
    font-size 2rem